<Page
    x:Class="WDCableWUI.UI.SpeedTest.SpeedTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WDCableWUI.UI.SpeedTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <!-- Custom Styles -->
        <Style x:Key="SpeedTestCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
        
        <Style x:Key="SpeedDisplayStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TestButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
                <TextBlock x:Uid="SpeedTest_Title"
                      Style="{StaticResource SubtitleTextBlockStyle}"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            
            <TextBlock x:Uid="SpeedTest_Description"
                      Style="{StaticResource CaptionTextBlockStyle}"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Connection Status -->
                <Border Grid.Row="0" Style="{StaticResource SpeedTestCardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <FontIcon x:Name="ConnectionIcon"
                                 Grid.Column="0"
                                 FontFamily="{StaticResource SymbolThemeFontFamily}"
                                 Glyph="&#xE774;"
                                 FontSize="20"
                                 Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                 VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="ConnectionStatusText"
                                      x:Uid="SpeedTest_Status_NotConnected"
                                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock x:Name="ConnectionDetailsText"
                                      x:Uid="SpeedTest_Status_Description"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        
                        <Button x:Name="RefreshConnectionButton"
                               Grid.Column="2"
                               x:Uid="SpeedTest_RefreshButton"
                               Style="{StaticResource AccentButtonStyle}"
                               Click="RefreshConnectionButton_Click"/>
                    </Grid>
                </Border>

                <!-- Speed Test Controls -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Upload Test -->
                    <Border Grid.Column="0" Style="{StaticResource SpeedTestCardStyle}">
                        <StackPanel Spacing="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <FontIcon Grid.Column="0"
                                         FontFamily="{StaticResource SymbolThemeFontFamily}"
                                         Glyph="&#xE898;"
                                         FontSize="24"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                         VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Uid="SpeedTest_Upload_Title"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock x:Name="UploadSpeedText"
                                      Text="0.00"
                                      Style="{StaticResource SpeedDisplayStyle}"/>
                            
                            <TextBlock x:Uid="SpeedTest_Unit_Mbps"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      HorizontalAlignment="Center"
                                      Margin="0,-8,0,0"/>
                            
                            <ProgressBar x:Name="UploadProgressBar"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="0"
                                        IsIndeterminate="False"
                                        Visibility="Collapsed"/>
                            
                            <ComboBox x:Name="UploadSizeComboBox"
                                     x:Uid="SpeedTest_TestSize_Header"
                                     SelectedIndex="1"
                                     HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="1 MB" Tag="1048576"/>
                                <ComboBoxItem Content="10 MB" Tag="10485760"/>
                                <ComboBoxItem Content="50 MB" Tag="52428800"/>
                                <ComboBoxItem Content="100 MB" Tag="104857600"/>
                            </ComboBox>
                            
                            <Button x:Name="StartUploadButton"
                                   x:Uid="SpeedTest_StartUpload_Button"
                                   Style="{StaticResource TestButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="StartUploadButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Download Test -->
                    <Border Grid.Column="2" Style="{StaticResource SpeedTestCardStyle}">
                        <StackPanel Spacing="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <FontIcon Grid.Column="0"
                                         FontFamily="{StaticResource SymbolThemeFontFamily}"
                                         Glyph="&#xE896;"
                                         FontSize="24"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                         VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Uid="SpeedTest_Download_Title"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock x:Name="DownloadSpeedText"
                                      Text="0.00"
                                      Style="{StaticResource SpeedDisplayStyle}"/>
                            
                            <TextBlock x:Uid="SpeedTest_Unit_Mbps"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      HorizontalAlignment="Center"
                                      Margin="0,-8,0,0"/>
                            
                            <ProgressBar x:Name="DownloadProgressBar"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="0"
                                        IsIndeterminate="False"
                                        Visibility="Collapsed"/>
                            
                            <ComboBox x:Name="DownloadSizeComboBox"
                                     x:Uid="SpeedTest_TestSize_Header"
                                     SelectedIndex="1"
                                     HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="1 MB" Tag="1048576"/>
                                <ComboBoxItem Content="10 MB" Tag="10485760"/>
                                <ComboBoxItem Content="50 MB" Tag="52428800"/>
                                <ComboBoxItem Content="100 MB" Tag="104857600"/>
                            </ComboBox>
                            
                            <Button x:Name="StartDownloadButton"
                                   x:Uid="SpeedTest_StartDownload_Button"
                                   Style="{StaticResource TestButtonStyle}"
                                   HorizontalAlignment="Stretch"
                                   Click="StartDownloadButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Test Results and History -->
                <Border Grid.Row="2" Style="{StaticResource SpeedTestCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Results Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      x:Uid="SpeedTest_Results_Title"
                                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            
                            <Button Grid.Column="1"
                                   x:Name="ClearHistoryButton"
                                   x:Uid="SpeedTest_ClearHistory_Button"
                                   Style="{StaticResource DefaultButtonStyle}"
                                   Click="ClearHistoryButton_Click"/>
                        </Grid>
                        
                        <!-- Results List -->
                        <ScrollViewer Grid.Row="1" MaxHeight="300">
                            <ListView x:Name="TestResultsListView"
                                     SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,8" Background="{ThemeResource SubtleFillColorTransparentBrush}" CornerRadius="6" Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <FontIcon Grid.Column="0"
                                                     FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                     Glyph="{Binding TestTypeIcon}"
                                                     FontSize="16"
                                                     Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                     VerticalAlignment="Center"/>
                                            
                                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TestTypeName}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Timestamp}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2"
                                                      Text="{Binding DataSizeFormatted}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0"/>
                                            
                                            <TextBlock Grid.Column="3"
                                                      Text="{Binding DurationFormatted}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0"/>
                                            
                                            <TextBlock Grid.Column="4"
                                                      Text="{Binding SpeedFormatted}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                        
                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyStatePanel"
                                   Grid.Row="1"
                                   Spacing="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Visible">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                     Glyph="&#xE9F9;"
                                     FontSize="32"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Uid="SpeedTest_NoResults_Title"
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Uid="SpeedTest_NoResults_Description"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>